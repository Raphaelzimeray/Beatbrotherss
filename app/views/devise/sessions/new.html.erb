<div class="page-container">
  <h1 class="my-4 log-in-title-page">Log in</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: 'log-in-label' },
                  input_html: { autocomplete: "email", class: 'log-in-input'} %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: 'log-in-label' },
                  input_html: { autocomplete: "current-password", class: 'log-in-input' } %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'log-in-forgot-pswd' %><br />
      <% end %>
      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'log-in-remember' } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'log-in-btn' %>
    </div>
  <% end %>

  <p class= 'never-use-label'>Never use the app before ?</p>
  <%= link_to new_visitor_path(), class: "onboarding-log-in-btn", method: :get do %>
    Discover the app
  <% end %>
</div>
